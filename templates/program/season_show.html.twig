{% extends 'base.html.twig' %}

{% block title %}Détail de la saison
{% endblock %}

{% block body %}
	<h1>{{ program.title }}</h1>
	<h2>Saison
		{{ season.number }}</h2>
	<p>Synopsis du programme :
		{{ program.synopsis }}</p>

	<h3>Liste des épisodes :</h3>
	<ul>
		{% for episode in season.episodes %}
			<a href="{{ path('program_episode_show', { 'program': program.id, 'season': season.id, 'episode' : episode.id }) }}">
				Episode
				{{ episode.number }}
			</a>
			<li>{{ episode.number}}
				:
				{{ episode.title }}</li>
			<li>{{ episode.synopsis}}
			{% endfor %}
		</ul>

		<a href="{{ path('program_index') }}">
			Retour à la liste des programmes
		</a>
	{% endblock %}
